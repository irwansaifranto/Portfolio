@model WebUI.Models.Driver.DriverPresentationStub
@{
    string currentController = (string)ViewContext.RouteData.Values["controller"];
    string currentAction = (string)ViewContext.RouteData.Values["action"];
    string backLink = "";

    ViewBag.Title = "Detail Supir";

    backLink = Url.Action("Index");
}

<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>
<div class="form-horizontal form-display">
    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Username, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.Username)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DriverType, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.DriverType)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PhoneNumber, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Address, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.Address)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.City, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.City)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.Email)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.WorkStartDate, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.WorkStartDate)
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-offset-4 col-xs-8">
                    <a href="@backLink" class="btn btn-link">Kembali</a>
                </div>
            </div>
        </div>
        <div class=" col-xs-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Photo, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @if (Model.Photo != null)
                    {
                        <p class="form-control-static">
                            <img src="@Url.Content(Model.Photo)" alt="@Model.Name" width="300"/>
                        </p>
                    }
                    else
                    {
                        <p class="form-control-static">
                            -
                        </p>
                    }
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DriverLicense, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @if (Model.DriverLicense != null)
                    {
                        <p class="form-control-static">
                            <a href="@Url.Content(Model.DriverLicense)" target="_blank">Download File</a>
                        </p>
                    }
                    else
                    {
                        <p class="form-control-static">
                            -
                        </p>
                    }
                </div>
            </div>
        </div>

    </div>
</div>


