@model WebUI.Models.Car.CarPresentationStub
@{
    string currentController = (string)ViewContext.RouteData.Values["controller"];
    string currentAction = (string)ViewContext.RouteData.Values["action"];
    string backLink = "";

    ViewBag.Title = "Detail Mobil";

    backLink = Url.Action("Index");
}

<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>
<div class="form-horizontal form-display">
    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                @Html.LabelFor(model => model.IdCarBrand, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.CarBrandName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IdCarModel, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.CarModelName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.LicensePlate, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.LicensePlate)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ModelYear, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.ModelYear)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Transmission, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.Transmission)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Fuel, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.Fuel)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Color, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.Color)
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-offset-4 col-xs-8">
                    <a href="@backLink" class="btn btn-link">Kembali</a>
                </div>
            </div>
        </div>
        <div class=" col-xs-6">
            <div class="form-group">
                @Html.LabelFor(model => model.IsActive, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @if (Model.IsActive == true)
                    {
                        <p class="form-control-static">
                            Ya
                        </p>
                    }
                    else
                    {
                        <p class="form-control-static">
                            Tidak
                        </p>
                    }
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Photo, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @if (Model.IsActive == true)
                    {
                        <img src="@Url.Content(Model.Photo)" alt="Image" width="300px"/>
                        <p class="form-control-static">
                            <a href="@Url.Content(Model.Photo)">Download File</a>
                        </p>
                    }
                    else
                    {
                        <p class="form-control-static">
                            -
                        </p>
                    }
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.VehicleRegistrationFile, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @if (Model.VehicleRegistrationFile != null)
                    {
                        <p class="form-control-static">
                            <a href="@Url.Content(Model.VehicleRegistrationFile)" target="_blank">Download File</a>
                        </p>
                    }
                    else
                    {
                        <p class="form-control-static">
                            -
                        </p>
                    }
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.TaxFile, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @if (Model.TaxFile != null)
                    {
                        <p class="form-control-static">
                            <a href="@Url.Content(Model.TaxFile)" target="_blank">Download File</a>
                        </p>
                    }
                    else
                    {
                        <p class="form-control-static">
                            -
                        </p>
                    }
                </div>
            </div>
        </div>

    </div>
</div>


