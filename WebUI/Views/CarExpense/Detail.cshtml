@model WebUI.Models.CarExpense.CarExpensePresentationStub
@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    string currentController = (string)ViewContext.RouteData.Values["controller"];
    string currentAction = (string)ViewContext.RouteData.Values["action"];
    string backLink = "";

    ViewBag.Title = "Biaya Mobil ";

    backLink = Url.Action("Index");
}

<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>
<div class="form-horizontal form-display">
    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                @Html.LabelFor(model => model.ExpenseDate, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.ExpenseDate)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LicensePlate, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.LicensePlate)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ExpenseType, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.ExpenseType)
                </div>
            </div>

            @if (Model.ExpenseTypeEnum == Common.Enums.CarExpenseType.OTHER)
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.Other, new { @class = "col-xs-4 control-label" })
                    <div class="col-xs-8">
                        @Html.DisplayFor(model => model.Other)
                    </div>
                </div>
            }

            @if (Model.ExpenseTypeEnum == Common.Enums.CarExpenseType.MAINTENANCE)
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.Distance, new { @class = "col-xs-4 control-label" })
                    <div class="col-xs-8">
                        @Html.DisplayFor(model => model.Distance)
                    </div>
                </div>
            }

            <div class="form-group">
                @Html.LabelFor(model => model.ExpenseValue, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.ExpenseValue)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Attachment, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @*@Html.DisplayFor(model => model.Attachment)*@
                    @{
                        if (Model.Attachment != null)
                        {
                            <p class="form-control-static">
                                <a href="@Url.Content(Model.Attachment)">Download File</a>
                            </p>
                        }
                        else
                        {
                            <p class="form-control-static">
                                - 
                            </p>
                        }
                    }
                </div>
            </div>
        </div>

        <div class=" col-xs-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Notes, new { @class = "col-xs-4 control-label" })
                <div class="col-xs-8">
                    @Html.DisplayFor(model => model.Notes)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-10">
                <a href="@backLink" class="btn btn-link">Kembali</a>
            </div>
        </div>
    </div>
</div>

